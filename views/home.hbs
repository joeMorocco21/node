<div>
    <input id="input-search" name="search" value="{{search}}" />
    <button id="button-search">Rechercher</button>
</div>

<table>
    <thead>
        <tr>
            <td>Code</td>
            <td>Nom</td>
            <td>Prix</td>
        </tr>
    </thead>
    <tbody id="table-body">
        {{#each products}}
        <tr>
            <td>{{this.id_products}}</td>
            <td>{{this.name}}</td>
            <td>{{this.price}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>

<script id="template-rows" type="text/x-handlebars-template">
    \{{#each products}}
    <tr>
        <td>\{{this.id_products}}</td>
        <td>\{{this.name}}</td>
        <td>\{{this.price}}</td>
    </tr>
    \{{/each}}
</script>
